{{#if (eq state 'success')}}
  <div class='button is-borderless'>{{x-icon 'copy-success'}}</div>
{{else if (eq state 'error')}}
  {{x-icon 'alert-triangle'}}
{{else}}
  {{#copy-button
    class='button is-borderless is-small'
    clipboardText=clipboardText
    success=(action (mut state) 'success')
    error=(action (mut state) 'error')
  }}
    {{x-icon 'copy-action'}}
  {{/copy-button}}
{{/if}}